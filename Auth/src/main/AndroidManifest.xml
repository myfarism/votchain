    <dist:module
        dist:instant="false"
        dist:title="@string/title_auth">
        <dist:delivery>
            <dist:on-demand />
        </dist:delivery>

        <dist:fusing dist:include="true" />
    </dist:module>

    <application>
        <activity
            android:name=".views.VerifyEmailActivity"
            android:exported="false" />
        <activity
            android:name=".views.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".views.LoginActivity"
            android:exported="false" />
    </application>

</manifest>